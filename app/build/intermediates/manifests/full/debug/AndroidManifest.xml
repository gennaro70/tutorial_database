<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tutorialdatabase"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.tutorialdatabase.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.tutorialdatabase.InserireDati"
            android:label="Inserisci dati nel Database"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.tutorialdatabase.VisualizzaDati"
            android:label="Visualizza dati dal Database"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.tutorialdatabase.CancellaDati"
            android:label="Cancella Dati"
            android:screenOrientation="portrait" />
    </application>

</manifest>