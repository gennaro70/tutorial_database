<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <TextView 
            android:id="@+id/textview1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="@string/text_elementi"/>
        
        <View 
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#000000"/>
     
        <TextView 
            android:id="@+id/textview3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="@string/nome"/>
        
        <EditText 
            android:id="@+id/ins_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"/>
        
        <TextView 
            android:id="@+id/textview4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="@string/cognome"/>
        
        <EditText 
            android:id="@+id/ins_cognome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"/>
        
        <TextView 
            android:id="@+id/textview5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="@string/telefono"/>
        
        <EditText 
            android:id="@+id/ins_telefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"/>
        
        <TextView 
            android:id="@+id/textview6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="@string/cellulare"/>
        
        <EditText 
            android:id="@+id/ins_cellulare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"/>
        
        <TextView 
            android:id="@+id/textview7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="@string/mail"/>
        
        <EditText 
            android:id="@+id/ins_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"/>
      
        <Button 
            android:id="@+id/salva_dati"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#000000"
            android:text="@string/salva"
            android:textColor="#ffffff"
            android:textSize="40sp"/>
        
    </LinearLayout>

</ScrollView>
